# =============================================================================
# Ghostty Configuration (WezTermからの移植)
# =============================================================================

# -----------------------------------------------------------------------------
# Font Settings
# -----------------------------------------------------------------------------
font-family = "0xProto Nerd Font Mono"
font-size = 15.5

# -----------------------------------------------------------------------------
# Window Settings
# -----------------------------------------------------------------------------
window-width = 120
window-height = 55
window-padding-x = 10
window-padding-y = 10
window-decoration = true
macos-titlebar-style = tabs
background-opacity = 0.97

# -----------------------------------------------------------------------------
# Cursor
# -----------------------------------------------------------------------------
cursor-style = bar
cursor-style-blink = true

# -----------------------------------------------------------------------------
# Shell
# -----------------------------------------------------------------------------
shell-integration = zsh

# -----------------------------------------------------------------------------
# Scrollback
# -----------------------------------------------------------------------------
scrollback-limit = 10000

# -----------------------------------------------------------------------------
# Keybindings (Mac用)
# -----------------------------------------------------------------------------
# タブ操作
keybind = super+t=new_tab
keybind = super+w=close_surface

# ペイン分割
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down

# ペイン移動 (Alt + 矢印)
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom

# ペインサイズ調整 (Ctrl+Shift + 矢印)
keybind = ctrl+shift+left=resize_split:left,20
keybind = ctrl+shift+right=resize_split:right,20
keybind = ctrl+shift+up=resize_split:up,20
keybind = ctrl+shift+down=resize_split:down,20

# コピペ
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

# -----------------------------------------------------------------------------
# Misc
# -----------------------------------------------------------------------------
confirm-close-surface = false
copy-on-select = true
mouse-hide-while-typing = true
